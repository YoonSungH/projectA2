<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.UserEditActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8793eb"
        android:paddingTop="24dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/AppTheme.Toolbar"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_keyboard_arrow_left_white_24dp" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="#292929"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/puradak_gentle_gothic"
                        android:text="Fit-pass plater"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/userEditTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/puradak_gentle_gothic"
                        android:text="내 정보 수정"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="36sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="180dp"
                        android:layout_height="4dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="#FFFFFF" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="275dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="-64dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/editName"
                                android:layout_width="86dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/puradak_gentle_gothic"
                                android:paddingTop="5dp"
                                android:text="이름"
                                android:textSize="20dp" />

                            <EditText
                                android:id="@+id/userEditName"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:fontFamily="@font/puradak_gentle_gothic"
                                android:hint="이름을 수정하세요"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingLeft="15dp"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <!-- 간격 추가 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/editId"
                                android:layout_width="83dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/puradak_gentle_gothic"
                                android:paddingTop="5dp"
                                android:text="ID"
                                android:textSize="20dp" />

                            <EditText
                                android:id="@+id/userEditId"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:fontFamily="@font/puradak_gentle_gothic"
                                android:hint="ID을 수정하세요"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingLeft="15dp"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <!-- 간격 추가 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/editPassword"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/puradak_gentle_gothic"
                                android:paddingTop="5dp"
                                android:text="비밀번호"
                                android:textSize="20dp" />

                            <EditText
                                android:id="@+id/userEditPassword"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:fontFamily="@font/puradak_gentle_gothic"
                                android:hint="비밀번호를 수정하세요"
                                android:inputType="textPassword"
                                android:paddingLeft="15dp"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <!-- 간격 추가 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/EditTel"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/puradak_gentle_gothic"
                                android:paddingTop="5dp"
                                android:text="전화번호"
                                android:textSize="20dp" />

                            <EditText
                                android:id="@+id/userEditTel"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:fontFamily="@font/puradak_gentle_gothic"
                                android:hint="전화번호를 수정하세요"
                                android:inputType="phone"
                                android:paddingLeft="15dp"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <!-- 간격 추가 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/EditAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/puradak_gentle_gothic"
                                android:paddingTop="5dp"
                                android:text="주소"
                                android:textSize="20dp" />

                            <EditText
                                android:id="@+id/userEditAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:fontFamily="@font/puradak_gentle_gothic"
                                android:hint="주소를 수정하세요"
                                android:inputType="phone"
                                android:paddingLeft="15dp"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <!-- 간격 추가 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/EditBirth"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/puradak_gentle_gothic"
                                android:paddingTop="5dp"
                                android:text="생년월일"
                                android:textSize="20dp" />

                            <EditText
                                android:id="@+id/userEditBirth"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:fontFamily="@font/puradak_gentle_gothic"
                                android:hint="생년월일 수정하세요"
                                android:inputType="text"
                                android:paddingLeft="15dp"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />
                        </LinearLayout>
                        <!-- 간격 추가 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/EditSex"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/puradak_gentle_gothic"
                                android:paddingTop="5dp"
                                android:text="성별 : "
                                android:textSize="20dp" />

                            <EditText
                                android:id="@+id/userEditSex"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:fontFamily="@font/puradak_gentle_gothic"
                                android:hint="성별을 수정하세요"
                                android:inputType="phone"
                                android:paddingLeft="15dp"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button

                        android:id="@+id/editBth"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:background="@drawable/buttonshape4"
                        android:fontFamily="@font/puradak_gentle_gothic"
                        android:text="수정"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/editBackBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:background="@drawable/buttonshape2"
                        android:fontFamily="@font/puradak_gentle_gothic"
                        android:text="삭제"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="24sp" />

                </LinearLayout>
            </LinearLayout>

        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/mapFabUserEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:src="@drawable/favorite_img_7"
            app:backgroundTint="#FDFDFD"
            app:fabSize="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="100">

            <LinearLayout
                android:id="@+id/home_linear_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/homeImageViewUserEdit"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_home_gray_24dp" />

                <View
                    android:layout_width="84dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorPrimaryDark"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_person_gray_24dp" />

                <View
                    android:layout_width="84dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorPrimaryDark" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>